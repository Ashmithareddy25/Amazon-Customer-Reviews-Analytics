# Git LFS tracking for large data and model files
# Patterns below instruct Git to store matching files in Git LFS

# Raw and processed datasets
data/raw/** filter=lfs diff=lfs merge=lfs -text
data/processed/** filter=lfs diff=lfs merge=lfs -text
data/output_csv/** filter=lfs diff=lfs merge=lfs -text
data/output_parquet/** filter=lfs diff=lfs merge=lfs -text
data/checkpoints/** filter=lfs diff=lfs merge=lfs -text

# Common large file extensions used in this repo
*.csv filter=lfs diff=lfs merge=lfs -text
*.tsv filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text

# Model artifacts
models/** filter=lfs diff=lfs merge=lfs -text
ml/models/** filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.pth filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.ckpt filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text

# Large exports and binary artifacts
output_parquet/** filter=lfs diff=lfs merge=lfs -text
output_csv/** filter=lfs diff=lfs merge=lfs -text
*.tsv filter=lfs diff=lfs merge=lfs -text
*.csv filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
*.pkl filter=lfs diff=lfs merge=lfs -text
